<h1>Advance Search</h1>
<% form_tag products_url, :method=>:get do %>

	<p>
	<%= label_tag :search_name_like_any, 'Name Keywords' %>
	<%= text_field_tag 'search[name_like_any]' %>
	</p>
	<p>
	<%= label_tag :search_description_like_any, 'Description Keywords' %>
	<%= text_field_tag 'search[description_like_any]' %>
	</p>
	<p>
		<%= label_tag :taxon, 'Category' %>
		<select name='taxon'>
			<option value=''>&lt;Any&gt;</option>
		<% root_taxons=Taxon.parent_id_null %>
		<%= render :partial=>'taxon_option', :collection=>root_taxons %>
		</select>
	</p>
	<p>
		<%= submit_tag 'Search' %>
	</p>
<% end %>